extends /_include/_layout.pug

block title
  title 商店博客 | LC E-SHOP
block content

  -
    var breadcrumbList = [
      {
        name: '首页',
        href: '/'
      },
      {
        name: '商店博客',
        href: '/page/category/2/'
      }
    ]
  include /_include/_breadcrumblist.pug

  section.lc-contentSection
    h1.lc-contentSection__title.lc-contentSection__title--center 商店博客
    ul.blogArchive
      - for (var i = 1; i <= 20; i++)
        li.blogArchive__item
          a(href="/page/1/")
            figure.blogArchive__figure
              img(src=`/assets/img/img_product_${('0' + ((i + 3) % 10 + 1)).slice(-2)}.jpg`, alt="blog title")
            .blogArchive__status
              p.pageCategory お知らせ
              p.pageDate
                time(datetime="2019-08-30T18:16:34+09:00") 2018.06.11
            .blogArchive__title ベストコスメ2018上半期！注目を浴びたコスメ
    .lc-archiveGuide
      p.lc-pagingNavi <em>64</em> 商品中 的 <em>1 - 20</em>件
      .pagination_nav
        a(href="/ec/product/category/1/")
          span.lc-icon-laquo.ir &laquo;
        strong.current 1
        a(href="/ec/product/category/1/") 2
        a(href="/ec/product/category/1/") 3
        a(href="/ec/product/category/1/") 4
        a(href="/ec/product/category/1/") 5
        a(href="/ec/product/category/1/")
          span.lc-icon-gt.ir &gt;
        a(href="/ec/product/category/1/")
          span.lc-icon-raquo.ir &raquo;
